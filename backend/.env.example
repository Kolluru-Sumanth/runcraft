# Environment Configuration for Runcraft Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/runcraft

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# n8n Configuration
N8N_SERVER_URL=http://localhost:5678
N8N_ADMIN_API_KEY=your-n8n-admin-api-key

# LLM Configuration (Choose one of the following)

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
LLM_API_BASE=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini

# Alternative: Groq Configuration (faster, cheaper)
# GROQ_API_KEY=your-groq-api-key-here
# LLM_API_BASE=https://api.groq.com/openai/v1
# LLM_MODEL=llama-3.1-70b-versatile

# Alternative: Local LLM Configuration (e.g., Ollama)
# LLM_API_BASE=http://localhost:11434/v1
# LLM_MODEL=llama3.1
# OPENAI_API_KEY=dummy-key-for-local-llm

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=info